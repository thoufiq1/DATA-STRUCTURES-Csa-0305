#include <stdio.h>

void sort(int arr[], int n, int order) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if ((order == 1 && arr[i] > arr[j]) || (order == 2 && arr[i] < arr[j])) {
                temp = arr[i]; arr[i] = arr[j]; arr[j] = temp;
            }
        }
    }
}

int main() {
    int n, arr[50], i;
    printf("Enter size: ");
    scanf("%d", &n);
    printf("Enter elements: ");
    for (i = 0; i < n; i++) scanf("%d", &arr[i]);

    sort(arr, n, 1);
    printf("Ascending: ");
    for (i = 0; i < n; i++) printf("%d ", arr[i]);

    sort(arr, n, 2);
    printf("\nDescending: ");
    for (i = 0; i < n; i++) printf("%d ", arr[i]);
    return 0;
}
